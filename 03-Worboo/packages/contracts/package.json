{
  "name": "contracts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "coverage:lcov": "rimraf coverage && hardhat coverage",
    "gas": "hardhat test",
    "gas:report": "rimraf build/gas && mkdirp build/gas && cross-env REPORT_GAS=true GAS_REPORT_OUTPUT=build/gas/gas-report.txt hardhat test",
    "report:evidence": "rimraf build/reports && npm run coverage:lcov && npm run gas:report && node scripts/collect-reports.cjs",
    "deploy:moonbase": "hardhat ignition deploy ./ignition/modules/WorbooModule.ts --network moonbase",
    "deploy:moonbeam": "hardhat ignition deploy ./ignition/modules/WorbooModule.ts --network moonbeam",
    "export:addresses": "ts-node scripts/export-addresses.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"{contracts,ignition,scripts,test}/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"{contracts,ignition,scripts,test}/**/*.{ts,tsx}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "cross-env": "^10.1.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.10",
    "mkdirp": "^0.5.6",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3"
  }
}
